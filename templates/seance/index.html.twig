{% extends 'base.html.twig' %}

{% block title %}Seance index
{% endblock %}

{% block body %}
	<h1 class="text-center">Seance index</h1>
	<div class="d-flex p-2 justify-content-center">
		<table class="table container">
			<thead>
				<tr>
					<th>Id</th>
					<th>DateDebut</th>
					<th>Language</th>
					<th>CreatedAt</th>
					<th>UpdatedAt</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for seance in seances %}
					<tr>
						<td>{{ seance.id }}</td>
						<td>{{ seance.dateDebut ? seance.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ seance.language }}</td>
						<td>{{ seance.createdAt ? seance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>{{ seance.updatedAt ? seance.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
						<td>
							<a href="{{ path('seance_show', {'id': seance.id}) }}" class="btn btn-primary">show</a>
							<a href="{{ path('seance_edit', {'id': seance.id}) }}" class="btn btn-primary">edit</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

	<div class="d-flex p-2 justify-content-center">
		<a href="{{ path('seance_new') }}" class="btn btn-success">Create new</a>
	</div>
{% endblock %}
